<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".seleccion_genero">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/plomo_juerte"
        android:orientation="vertical"
        android:padding="35dp"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="36dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            app:srcCompat="@drawable/mtlogoblanco" />

        <TextView
            android:id="@+id/tituloGenero"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:fontFamily="@font/ubuntiu"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/hueso"
            android:textSize="40dp" />

        <ListView
            android:id="@+id/list_songs"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="75"
            android:textAlignment="center"
            />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>